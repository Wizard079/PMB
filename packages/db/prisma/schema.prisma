enum MatchStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

model Matches {
  id      Int         @id @default(autoincrement())
  team1   String
  team2   String
  runs    Int
  balls   Int
  wickets Int
  status  MatchStatus
}

model Message {
  id             Int    @id @default(autoincrement())
  topic          String
  messageContent String
}
